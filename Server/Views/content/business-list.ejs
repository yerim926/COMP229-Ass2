<main class="container">
    <div id = "mainDiv" class="p-5 mb-4 bg-light rounded-3">
            <div class="p-5 mb-4 bg-light rounded-3" >
            <div class="container-fluid py-5">
                <h1 class="display-5 fw-bold">Business Contacts List</h1>

                <div class="row">
                    <div class="col">

                    <% if(displayName) { %>
                    <a href="/business-list/add" id="addButton" class="btn btn-success mb-1"><i class="fas fa-plus-circle"></i> Add Business Contacts</a>
                    <% } %>  
                        <!--Table-->
                        <table class="table table-striped table-hover">
                        <% if(displayName) { %>
                        <p></p>
                        <% } else { %>
                         <p class="hint-text" style="color:red; font-weight:bold">Please login if you want to add or edit your business contact.</p>
                        <% } %>
                            <thead>
                            <tr class="table-dark">
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Phone Number</th>
                                <th scope="col">Contact Email</th>

                                <% if(displayName) { %>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                                <% } %>
                            </tr>
                            </thead>
                            <tbody>

                                <!-- Repeatable Row Template -->
                                <% for (let count = 0; count < business.length; count++) { %>

                            <tr>
                                <th scope="row"><%= count + 1 %></th>
                                <td><%= business[count].name %></td>
                                <td><%=business[count].phone %></td>
                                <td><%=business[count].email %></td>

                                <% if(displayName) { %>
                                <td class="text-center"><a href="/business-list/edit/<%= business[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm"></i> Edit</a></td>
                                <td class="text-center"><a href="/business-list/delete/<%= business[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fas fa-trash-alt fa-sm"></i> Delete</a></td>
                                <% } %>
                            </tr>

                            <% } %>
                            
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>