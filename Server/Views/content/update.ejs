<main class="container">
     <div class="p-5 mb-4 bg-light rounded-3" >  
        <div class="row justify-content-lg-center g-3">
            <h1><%= title %> Business Contacts</h1>

            <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-name">Name</span>
                    <input id = "name" type="text" class="form-control" placeholder="Enter Contact Name" aria-label="Contact Name" aria-describedby="Contact Name"
                    name="name" value="<%= business.name %>" required>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-name">Contact Number</span>
                    <input id="phone" type="text" class="form-control" placeholder="Enter Contact Number" aria-label="Contact Number" aria-describedby="Contact Number"
                    name="phone" value="<%= business.phone %>" required>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-name">Contact Email</span>
                    <input id="email" type="text" class="form-control" placeholder="Enter Contact Email" aria-label="Contact Email" aria-describedby="Contact Email"
                    name="email" value="<%= business.email %>" required>
                </div>

                    <% if(title == "Edit") { %>
                        <button type="submit" id="editButton" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
                    <% } else { %>
                        <button type="submit" id="addButton" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
                    <% } %>  
                    
                    <a href="/business-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</main>